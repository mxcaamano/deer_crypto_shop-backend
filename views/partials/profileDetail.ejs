<div class="container py-3">
  <h2>Perfil 🙎‍♂️</h2>
  <div class="container my-3">
    <img class="mb-3" src=<%= user.imgURL %> alt="" width="80" height="80">
        <div class="btn-group">
          <button type="submit" class="mx-4 p-2 btn-view"><a href="/carrito" class="text-decoration-none">Carrito 🛒</a></button>
          <button type="submit" class="mx-4 p-2 btn-view"><a href="/chat/mismensajes" class="text-decoration-none">Mensajes 💬</a></button>
          <button type="submit" class="mx-4 p-2 btn-view"><a href="/ordenes" class="text-decoration-none">Órdenes 🧾</a></button>
        </div></br>
        <span>Nombre</span>
        <span class="form-control w-25 p-1 mb-3 mt-1"><%= user.name %></span>
        <span>Correo Electrónico</span>
        <span class="form-control w-25 p-1 mb-3 mt-1"><%= user.email %></span>
        <span>Dirección</span>
        <span class="form-control w-25 p-1 mb-3 mt-1"><%= user.address %></span>
        <span>Teléfono</span>
        <span class="form-control w-25 p-1 mb-3 mt-1"><%= user.phone %></span>
        <span>Edad</span>
        <span class="form-control w-25 p-1 mb-3 mt-1"><%= user.age %></span><br>
  </div>
</div>