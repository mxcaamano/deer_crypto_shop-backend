<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Estilos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <!-- WebSocket -->
    <!-- <script src="/socket.io/socket.io.js"></script> -->
    <title>Deer Crypto Shop - Productos</title>
</head>
<body class="deer-theme-dark">
<%- include('../partials/header.ejs')%>
    <div class="container py-3">
        <h2>Productos</h2>
        <!-- <%- include('../partials/formAdd.ejs')%>         -->
    <% if(listExist){ %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-3" id="products">
        <% list.forEach(obj => { %>
            <form action="/carrito?_method=PUT" method="post" class="d-flex align-items-center flex-column" style="width: 22rem;">
            <div class="col">
              <div class="card shadow-sm bg-black">
                <img src=<%= obj.thumbnail %> alt="" class="bd-placeholder-img card-img-top productIMG" width="100%" height="225">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                    <small class="h6">ID: <%= obj.id %></small>
                  </div>
                  <h5 class="card-text fs-5"><%= obj.title %></h5>
                  <p class="card-text h5">Precio: <%= obj.price %> U$S</p>
                  <input type="hidden" id="id_prod" name="id_prod" class="form-control" required value = <%= obj.id %>>
                  <input type="number" id="qty" name="qty" class="w-25 form-control mb-2" min=1 max=<%= obj.stock %> value=0>
                  <button type="submit" class="mx-4 p-2 btn-view">AÃ±adir al Carrito</button>
                </div>
              </div>
            </div>
            </form>
        <% })%>
    </div>
        <%}else{%>
            <div className="card-body cart">
                <div className="col-sm-12 empty-cart-cls text-center">
                <h4>No hay productos!</h4>
                </div>
            </div>
        <%}%>
    </div>    
<%- include('../partials/footer.ejs')%>
</body>
</html>